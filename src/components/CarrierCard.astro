---
// Individual Carrier Card component
export interface Props {
  name: string;
  icon: string;
  iconColor: string;
  status: string;
  statusColor: string;
  services: number;
  monthlyCost: string;
  contractEnd: string;
}

const { name, icon, iconColor, status, statusColor, services, monthlyCost, contractEnd } = Astro.props;
---

<div class="carrier-card bg-white border border-gray-300 rounded-lg p-6 hover:shadow-lg">
  <div class="flex items-center justify-between mb-4">
    <div class="flex items-center space-x-3">
      <div class={`p-2 ${iconColor} rounded-lg`}>
        <i class={`${icon} ${iconColor.replace('bg-', 'text-').replace('100', '600')}`}></i>
      </div>
      <h3 class="font-semibold">{name}</h3>
    </div>
    <span class={`px-2 py-1 ${statusColor} text-xs rounded-full`}>{status}</span>
  </div>
  <div class="space-y-3 text-sm">
    <div class="flex justify-between">
      <span class="text-gray-500">Services</span>
      <span class="font-medium">{services}</span>
    </div>
    <div class="flex justify-between">
      <span class="text-gray-500">Monthly Cost</span>
      <span class="font-medium">{monthlyCost}</span>
    </div>
    <div class="flex justify-between">
      <span class="text-gray-500">Contract End</span>
      <span class="font-medium">{contractEnd}</span>
    </div>
  </div>
  <div class="mt-4 pt-4 border-t border-gray-200 flex justify-between items-center">
    <button onclick={`openCarrierModal('${name.toLowerCase().replace(/\s+/g, '-')}')`} class="text-blue-600 hover:text-blue-800 text-base font-medium px-4 py-2.5 rounded-lg">
      <i class="fas fa-eye mr-1"></i> View
    </button>
    <button class="text-indigo-600 hover:text-indigo-800 text-base font-medium px-4 py-2.5 rounded-lg">
      
      <i class="fas fa-pencil-alt mr-1"></i> Edit
    </button>
  </div>
</div>

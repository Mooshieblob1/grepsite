---
// Sidebar component
---

<div class="sidebar text-white flex flex-col">
  <div class="p-4 flex items-center space-x-3">
    <div class="bg-white p-2 rounded-lg">
      <i class="fas fa-satellite-dish text-indigo-800 text-xl"></i>
    </div>
    <span class="logo-text text-xl font-bold">TEM Portal</span>
  </div>
  
  <!-- Collapse Toggle Button -->
  <div class="px-4 pb-2">
    <button class="text-white hover:text-indigo-200 focus:outline-none transition-colors w-full flex items-center justify-center py-2 rounded-lg hover:bg-indigo-700" id="sidebar-toggle">
      <i class="fas fa-chevron-left toggle-icon"></i>
    </button>
  </div>
  <div class="mt-8 flex-1">
    <div class="px-4 py-2">
      <div class="section-title text-xs uppercase text-indigo-300 font-semibold mb-2">Main</div>
      <a href="/" class="nav-item flex items-center space-x-3 px-3 py-3 rounded-lg hover:bg-indigo-700 text-white" data-tooltip="Dashboard">
        <i class="fas fa-tachometer-alt"></i>
        <span class="nav-text">Dashboard</span>
      </a>
    </div>
    <div class="px-4 py-2">
      <div class="section-title text-xs uppercase text-indigo-300 font-semibold mb-2">Carrier Management</div>
      <a href="/carriers" class="nav-item flex items-center space-x-3 px-3 py-3 rounded-lg hover:bg-indigo-700 text-white" data-tooltip="Carriers">
        <i class="fas fa-network-wired"></i>
        <span class="nav-text">Carriers</span>
      </a>
      <a href="/invoices" class="nav-item flex items-center space-x-3 px-3 py-3 rounded-lg hover:bg-indigo-700 text-white" data-tooltip="Invoices">
        <i class="fas fa-file-invoice-dollar"></i>
        <span class="nav-text">Invoices</span>
      </a>
      <a href="/usage-analytics" class="nav-item flex items-center space-x-3 px-3 py-3 rounded-lg hover:bg-indigo-700 text-white" data-tooltip="Usage Analytics">
        <i class="fas fa-chart-line"></i>
        <span class="nav-text">Usage Analytics</span>
      </a>
    </div>
    <div class="px-4 py-2">
      <div class="section-title text-xs uppercase text-indigo-300 font-semibold mb-2">Support</div>
      <a href="/tickets" class="nav-item flex items-center space-x-3 px-3 py-3 rounded-lg hover:bg-indigo-700 text-white" data-tooltip="Tickets">
        <i class="fas fa-ticket-alt"></i>
        <span class="nav-text">Tickets</span>
      </a>
      <a href="/settings" class="nav-item flex items-center space-x-3 px-3 py-3 rounded-lg hover:bg-indigo-700 text-white" data-tooltip="Settings">
        <i class="fas fa-cog"></i>
        <span class="nav-text">Settings</span>
      </a>
    </div>
  </div>
  <div class="p-4 border-t border-indigo-700">
    <div class="flex items-center space-x-3">
      <img src="https://randomuser.me/api/portraits/women/44.jpg" alt="User" class="user-avatar w-10 h-10 rounded-full">
      <div class="user-info">
        <div class="font-medium">Sarah Johnson</div>
        <div class="text-xs text-indigo-300">Admin</div>
      </div>
    </div>
  </div>
</div>

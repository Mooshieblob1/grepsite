---
// Sidebar component
interface Props {
  currentPage?: string;
}

const { currentPage = "" } = Astro.props;
---

<div class="sidebar text-white flex flex-col">
  <div class="p-4">
    <div class="flex items-center space-x-3 mb-3">
      <div class="p-2 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-lg">
        <i class="fas fa-satellite-dish text-white text-sm"></i>
      </div>
      <div class="logo-text">
        <div class="text-lg font-bold">Telco Portal</div>
        <div class="text-xs text-indigo-300">powered by BlobLogic</div>
      </div>
    </div>
  </div>
  <div class="flex-1">
    <div class="px-4 py-2">
      <div class="section-title text-xs uppercase text-indigo-300 font-semibold mb-2">Main</div>
      <a href="/" class={`nav-item flex items-center space-x-3 px-3 py-3 rounded-lg text-white transition-colors ${currentPage === 'dashboard' || currentPage === '' ? 'bg-indigo-700 border-l-4 border-indigo-300' : 'hover:bg-indigo-700'}`} data-tooltip="Dashboard">
        <i class="fas fa-tachometer-alt"></i>
        <span class="nav-text">Dashboard</span>
      </a>
    </div>
    <div class="px-4 py-2">
      <div class="section-title text-xs uppercase text-indigo-300 font-semibold mb-2">Carrier Management</div>
      <a href="/inventory" class={`nav-item flex items-center space-x-3 px-3 py-3 rounded-lg text-white transition-colors ${currentPage === 'inventory' || currentPage === 'lines' ? 'bg-indigo-700 border-l-4 border-indigo-300' : 'hover:bg-indigo-700'}`} data-tooltip="Inventory">
        <i class="fas fa-phone"></i>
        <span class="nav-text">Inventory</span>
      </a>
      <a href="/carriers" class={`nav-item flex items-center space-x-3 px-3 py-3 rounded-lg text-white transition-colors ${currentPage === 'carriers' ? 'bg-indigo-700 border-l-4 border-indigo-300' : 'hover:bg-indigo-700'}`} data-tooltip="Carriers">
        <i class="fas fa-network-wired"></i>
        <span class="nav-text">Carriers</span>
      </a>
      <a href="/invoices" class={`nav-item flex items-center space-x-3 px-3 py-3 rounded-lg text-white transition-colors ${currentPage === 'invoices' ? 'bg-indigo-700 border-l-4 border-indigo-300' : 'hover:bg-indigo-700'}`} data-tooltip="Invoices">
        <i class="fas fa-file-invoice-dollar"></i>
        <span class="nav-text">Invoices</span>
      </a>
      <a href="/usage-analytics" class={`nav-item flex items-center space-x-3 px-3 py-3 rounded-lg text-white transition-colors ${currentPage === 'reporting' || currentPage === 'usage-analytics' ? 'bg-indigo-700 border-l-4 border-indigo-300' : 'hover:bg-indigo-700'}`} data-tooltip="Reporting">
        <i class="fas fa-chart-line"></i>
        <span class="nav-text">Reporting</span>
      </a>
    </div>
    <div class="px-4 py-2">
      <div class="section-title text-xs uppercase text-indigo-300 font-semibold mb-2">Support</div>
      <a href="/tickets" class={`nav-item flex items-center space-x-3 px-3 py-3 rounded-lg text-white transition-colors ${currentPage === 'tickets' ? 'bg-indigo-700 border-l-4 border-indigo-300' : 'hover:bg-indigo-700'}`} data-tooltip="Tickets">
        <i class="fas fa-ticket-alt"></i>
        <span class="nav-text">Tickets</span>
      </a>
    </div>
    <div class="px-4 py-2">
      <div class="section-title text-xs uppercase text-indigo-300 font-semibold mb-2">Administration</div>
      <a href="/users" class={`nav-item flex items-center space-x-3 px-3 py-3 rounded-lg text-white transition-colors ${currentPage === 'users' ? 'bg-indigo-700 border-l-4 border-indigo-300' : 'hover:bg-indigo-700'}`} data-tooltip="User Management">
        <i class="fas fa-users"></i>
        <span class="nav-text">Users</span>
      </a>
      <a href="/settings" class={`nav-item flex items-center space-x-3 px-3 py-3 rounded-lg text-white transition-colors ${currentPage === 'configuration' || currentPage === 'settings' ? 'bg-indigo-700 border-l-4 border-indigo-300' : 'hover:bg-indigo-700'}`} data-tooltip="Configuration">
        <i class="fas fa-cogs"></i>
        <span class="nav-text">Configuration</span>
      </a>
    </div>
  </div>
  
  <div class="p-4 border-t border-indigo-700">
    <a href="/profile" class="flex items-center space-x-3 hover:bg-indigo-700 rounded-lg p-2 transition-colors group" data-tooltip="View Profile">
      <img src="https://randomuser.me/api/portraits/women/44.jpg" alt="User" class="user-avatar w-10 h-10 rounded-full">
      <div class="user-info">
        <div class="font-medium group-hover:text-white">Sarah Johnson</div>
        <div class="text-xs text-indigo-300 group-hover:text-indigo-200">Admin â€¢ View Profile</div>
      </div>
    </a>
  </div>
</div>

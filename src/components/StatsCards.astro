---
// Stats Cards component
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-6">
  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-gray-500">Active Carriers</p>
        <h3 class="text-2xl font-bold text-indigo-600">12</h3>
      </div>
      <div class="p-3 rounded-full bg-indigo-100 text-indigo-600">
        <i class="fas fa-network-wired text-xl"></i>
      </div>
    </div>
    <div class="mt-4">
      <span class="text-green-500 text-sm font-medium">+2 from last month</span>
    </div>
  </div>
  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-gray-500">Monthly Cost</p>
        <h3 class="text-2xl font-bold text-blue-600">$42,580</h3>
      </div>
      <div class="p-3 rounded-full bg-blue-100 text-blue-600">
        <i class="fas fa-dollar-sign text-xl"></i>
      </div>
    </div>
    <div class="mt-4">
      <span class="text-red-500 text-sm font-medium">-5% from last month</span>
    </div>
  </div>
  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-gray-500">Active Services</p>
        <h3 class="text-2xl font-bold text-purple-600">187</h3>
      </div>
      <div class="p-3 rounded-full bg-purple-100 text-purple-600">
        <i class="fas fa-server text-xl"></i>
      </div>
    </div>
    <div class="mt-4">
      <span class="text-green-500 text-sm font-medium">+12 from last month</span>
    </div>
  </div>
  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-gray-500">Open Tickets</p>
        <h3 class="text-2xl font-bold text-orange-600">8</h3>
      </div>
      <div class="p-3 rounded-full bg-orange-100 text-orange-600">
        <i class="fas fa-ticket-alt text-xl"></i>
      </div>
    </div>
    <div class="mt-4">
      <span class="text-red-500 text-sm font-medium">+3 from last week</span>
    </div>
  </div>
</div>

---
// Carrier Overview Section component
import CarrierCard from "./CarrierCard.astro";
import CarrierModal from "./CarrierModal.astro";
---

<div class="bg-white rounded-lg shadow mb-6">
  <div class="p-6 border-b border-gray-200">
    <div class="flex items-center justify-between">
      <h2 class="text-lg font-semibold text-gray-800">Carrier Overview</h2>
      <button class="bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700 transition">
        <i class="fas fa-plus mr-2"></i> Add Carrier
      </button>
    </div>
  </div>
  <div class="p-6">
    <div class="flex items-center justify-between mb-6">
      <div class="relative w-64">
        <input type="text" placeholder="Search carriers..." class="w-full pl-10 pr-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
        <i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
      </div>
      <div class="flex space-x-2">
        <button class="px-4 py-2 border rounded-lg hover:bg-gray-50">
          <i class="fas fa-filter mr-2"></i> Filter
        </button>
        <button class="px-4 py-2 border rounded-lg hover:bg-gray-50">
          <i class="fas fa-download mr-2"></i> Export
        </button>
      </div>
    </div>

    <!-- Carrier Cards Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <CarrierCard 
        name="AT&T Wireless"
        icon="fas fa-signal"
        iconColor="bg-blue-100"
        status="Active"
        statusColor="bg-green-100 text-green-800"
        services={45}
        monthlyCost="$8,750"
        contractEnd="Dec 2024"
      />
      <CarrierCard 
        name="Verizon Business"
        icon="fas fa-signal"
        iconColor="bg-red-100"
        status="Active"
        statusColor="bg-green-100 text-green-800"
        services={62}
        monthlyCost="$12,340"
        contractEnd="Mar 2025"
      />
      <CarrierCard 
        name="T-Mobile"
        icon="fas fa-signal"
        iconColor="bg-pink-100"
        status="Pending"
        statusColor="bg-yellow-100 text-yellow-800"
        services={28}
        monthlyCost="$5,670"
        contractEnd="Jun 2024"
      />
      <CarrierCard 
        name="Vonage Business"
        icon="fas fa-phone"
        iconColor="bg-orange-100"
        status="Active"
        statusColor="bg-green-100 text-green-800"
        services={33}
        monthlyCost="$7,890"
        contractEnd="Dec 2023"
      />
      <CarrierCard 
        name="Zoom Phone"
        icon="fas fa-video"
        iconColor="bg-green-100"
        status="Active"
        statusColor="bg-green-100 text-green-800"
        services={29}
        monthlyCost="$4,520"
        contractEnd="Sep 2024"
      />
      <CarrierCard 
        name="Sprint (Legacy)"
        icon="fas fa-broadcast-tower"
        iconColor="bg-indigo-100"
        status="Inactive"
        statusColor="bg-gray-100 text-gray-800"
        services={0}
        monthlyCost="$0"
        contractEnd="Mar 2023"
      />
    </div>

    <!-- Pagination -->
    <div class="mt-8 flex items-center justify-between">
      <div class="text-sm text-gray-500">
        Showing <span class="font-medium">1</span> to <span class="font-medium">6</span> of <span class="font-medium">12</span> carriers
      </div>
      <div class="flex space-x-1">
        <button class="px-3 py-1 border rounded-lg hover:bg-gray-50">
          <i class="fas fa-chevron-left"></i>
        </button>
        <button class="px-3 py-1 border rounded-lg bg-indigo-600 text-white">1</button>
        <button class="px-3 py-1 border rounded-lg hover:bg-gray-50">2</button>
        <button class="px-3 py-1 border rounded-lg hover:bg-gray-50">
          <i class="fas fa-chevron-right"></i>
        </button>
      </div>
    </div>
  </div>
  
  <!-- Carrier Modal -->
  <CarrierModal />
</div>

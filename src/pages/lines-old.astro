---
import BaseLayout from "../layouts/BaseLayout.astro";

// Redirect to login if not authenticated
if (!Astro.cookies.has('session')) {
  return Astro.redirect('/login');
}

// Lines Management page
const title = "BlobLogic - Lines Management";
---

<BaseLayout title={title} pageTitle="Lines Management">
  <!-- Page Header -->
  <div class="mb-6">
    <div class="flex items-center justify-between">
      <div>
        <h2 class="text-2xl font-bold text-gray-900">Lines Management</h2>
        <p class="text-gray-600">Manage all telecommunication lines with advanced filtering and search</p>
      </div>
      <div class="flex space-x-2">
        <button class="bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700 transition">
          <i class="fas fa-download mr-2"></i> Export CSV
        </button>
        <button class="bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 transition">
          <i class="fas fa-plus mr-2"></i> Add Line
        </button>
      </div>
    </div>
  </div>

  <!-- Quick Stats -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
    <div class="bg-white rounded-lg shadow p-4">
      <div class="flex items-center">
        <div class="p-2 bg-blue-100 rounded-lg">
          <i class="fas fa-phone text-blue-600"></i>
        </div>
        <div class="ml-4">
          <p class="text-sm text-gray-500">Total Lines</p>
          <p class="text-xl font-bold text-gray-900">2,847</p>
        </div>
      </div>
    </div>
    <div class="bg-white rounded-lg shadow p-4">
      <div class="flex items-center">
        <div class="p-2 bg-green-100 rounded-lg">
          <i class="fas fa-check-circle text-green-600"></i>
        </div>
        <div class="ml-4">
          <p class="text-sm text-gray-500">Active Lines</p>
          <p class="text-xl font-bold text-gray-900">2,641</p>
        </div>
      </div>
    </div>
    <div class="bg-white rounded-lg shadow p-4">
      <div class="flex items-center">
        <div class="p-2 bg-yellow-100 rounded-lg">
          <i class="fas fa-pause-circle text-yellow-600"></i>
        </div>

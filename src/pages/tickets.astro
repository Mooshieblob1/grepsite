          </div>
          <div class="ml-4">
            <div class="text-2xl font-bold text-gray-900 dark:text-white">{openTickets}</div>
            <div class="text-sm text-gray-500 dark:text-gray-400">Open Tickets</div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Filters -->
